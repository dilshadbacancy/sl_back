#!/bin/sh
# Pre-commit hook: Documentation generation moved to CI

echo "ğŸ“š Checking for route changes..."

# If route files changed, inform developer that CI will generate docs
if git diff --cached --name-only | grep -E "src/routes/.*\.ts$" > /dev/null; then
  echo "âœï¸  Route files detected. Documentation generation has been moved to CI (GitHub Actions)."
  echo "If you need to generate docs locally, run: npm run generate-docs"
  echo "Generated docs will be committed by CI; local commits will not run the generator by default."
else
  echo "âœ“ No route changes detected"
fi

exit 0
